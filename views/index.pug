extends layout

block content
  h1 #{title}
  div#wrapper
    section#temperature
      ul
        li Current Temperature: #{temp}&#176; F (#{tempc}&#176; C)
        li Real Feel: #{realfeel}&#176; F (#{realfeelc}&#176; C)
        li#end Heat Index: #{heat}&#176; F (#{heatc}&#176; C)
      ul/
    section/

    section#conditions
      ul
        li It is currently #{weather}
        li Humidity: #{humidity}
        li#end Rain Fall: #{rain} Inches
      ul/
    section/
  div/

  div#selection
    form#citySelect(method='post' action='/')
      x Select a city in Illinois to check it's weather:
      select(name="city")
        option(value="Chicago" selected="selected") Chicago
        option(value="Peoria") Peoria
        option(value="Rockford") Rockford
        option(value="Campaign") Campaign
        option(value="Naperville") Naperville
        option(value="Joliet") Joliet
        option(value="Schaumburg") Schaumburg
        option(value="Springfield") Springfield
        option(value="Elgin") Elgin
        option(value="Evanston") Evanston
        option(value="Carbondale") Carbondale
      input(type="submit" value="Submit")
  div/

  div
      footer#weather #{update}
  div/
